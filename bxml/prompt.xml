<?xml version="1.0" ?>
<Response>
    <StartRecording 
        multiChannel="true"
        recordingAvailableUrl="/recordingAvailable"
        transcriptionAvailableUrl="/transcriptionAvailable"
        transcribe="${query.transcribe:false}" />
    <SpeakSentence voice="susan">
        This is a multi-channel recording. Say something, and that should be in another channel.
    </SpeakSentence>
    <Pause duration="${query.duration:5}"/>

    <SpeakSentence voice="susan">
        And now, a single channel recording.
    </SpeakSentence>
    <Record maxDuration="${query.duration:5}" 
        transcribe="${query.transcribe:false}"
        recordingAvailableUrl="/recordingAvailable"
        transcriptionAvailableUrl="/transcriptionAvailable"/>

    <PauseRecording />
    <SpeakSentence voice="susan">
        Some private time.
    </SpeakSentence>
    <Pause duration="3" />
    <SpeakSentence voice="susan">
        Ok that's enough.
    </SpeakSentence>
    <ResumeRecording />

    <SpeakSentence voice="susan">
        We're done now, thanks!
    </SpeakSentence>
    <StopRecording />
</Response>
