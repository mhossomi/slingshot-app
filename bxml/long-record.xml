<?xml version="1.0" ?>
<Response>
    <StartRecording recordingAvailableUrl="/recordingAvailable" />
    <SpeakSentence voice="susan">
        This call is being recorded.
    </SpeakSentence>
    <Pause duration="1" />
    <PauseRecording />
    <SpeakSentence voice="susan">
        Now it isn't.
    </SpeakSentence>
    <Pause duration="3" />
    <ResumeRecording />
    <SpeakSentence voice="susan">
        Now it is again.
    </SpeakSentence>
    <Pause duration="1" />
    <StopRecording />
</Response>
