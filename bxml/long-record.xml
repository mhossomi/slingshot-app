<?xml version="1.0" ?>
<Response>
    <StartRecording 
        recordingAvailableUrl="/recordingAvailable"
        transcriptionAvailableUrl="/recordingAvailable"
        transcribe="${query.transcribe:false}" />
    <SpeakSentence voice="susan">
        This call is being recorded.
    </SpeakSentence>
    <Pause duration="1" />
    <PauseRecording />
    <SpeakSentence voice="susan">
        Now it isn't.
    </SpeakSentence>
    <Pause duration="1" />
    <ResumeRecording />
    <SpeakSentence voice="susan">
        Now it is again. Bye!
    </SpeakSentence>
    <Pause duration="1" />
    <StopRecording />
</Response>
